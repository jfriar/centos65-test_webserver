Listen *:<%= @port %>
<VirtualHost *:<%= @port %>>

    DocumentRoot    <%= @docroot %>

    <Directory />
        Options         <%= @options %>
        AllowOverride   <%= @override %>
        Order           allow,deny
        allow from all
    </Directory>

    LogLevel    warn
    ErrorLog    <%= @log_dir %>/<%= @hostname %>_<%= @site %>_<%= @port %>.error.log
    CustomLog   <%= @log_dir %>/<%= @hostname %>_<%= @site %>_<%= @port %>.access.log combined

</VirtualHost>
